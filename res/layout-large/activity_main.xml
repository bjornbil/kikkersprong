<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="0dp"
    android:background="@color/bgcolor"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/scanbutton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignParentBottom="true"
        android:background="@color/btncolor"
        android:text="@string/scan" />

    <TextView
        android:id="@+id/checktext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/main_title"
        android:layout_below="@+id/main_title"
        android:text="@string/slogan"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/slogancolor" />

    <LinearLayout
        android:id="@+id/clockspace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/scanbutton"
        android:layout_below="@+id/checktext"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-5dp"
        android:contentDescription="infobutton"
        android:scaleType="fitStart"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/qrcodeinfo2"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignTop="@+id/imageView6"
        android:src="@drawable/ic_euro" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imageView1"
        android:src="@drawable/ic_pres" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/scanbutton"
        android:layout_below="@+id/qrexample"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_checkin" />

    <TextView
        android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginTop="23dp"
        android:layout_toLeftOf="@+id/clockspace"
        android:text="@string/kikkersprong"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50sp" />

    <Button
        android:id="@+id/infobutton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imageView1"
        android:layout_toLeftOf="@+id/imageView6"
        android:background="@color/infcolor"
        android:text="@string/info" />

    <TextView
        android:id="@+id/begroeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/infobutton"
        android:layout_alignTop="@+id/qrexample"
        android:layout_marginTop="40dp"
        android:text="@string/qrcode"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:text="@string/qrcodeinfo"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignRight="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:src="@drawable/ic_checkout" />

    <ImageView
        android:id="@+id/qrexample"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/clockspace"
        android:layout_marginTop="73dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/begroeting"
        android:src="@drawable/ic_qr" />

</RelativeLayout>